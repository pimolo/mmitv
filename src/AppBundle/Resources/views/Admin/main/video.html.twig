{% extends 'AppBundle:Admin:base.html.twig' %}
{% block title %}Videos{% endblock %}
{% block header %}
    {% include 'AppBundle:Admin:main/top-menu.html.twig' %}
{% endblock %}
{% block main -%}
    {% include 'AppBundle:Admin:main/left-menu.html.twig' %}
    <table>
        <thead>
            <th>Titre</th>
            <th>Durée</th>
            <th>Auteur</th>
            <th>Vidéo</th>
        </thead>
        <tbody>
{% for video in videos %}
        <tr>
            <td>{{ video.title }}</td>
            <td>{{ video.duration|date('i:s') }}</td>
            <td>{{ video.author }}</td>
            <td>{{ video.embedCode|raw }}</td>
        </tr>
{% endfor %}
        </tbody>
    </table>
<label for="url">Url de la video : </label><input type="text" id="url" />
<div id="infos">
    <p id="titre">Titre : <span></span></p>
    <p id="auteur">Auteur : <span></span></p>
    <p id="video">Video : <span></span></p>
    <button id="add">Ajouter</button>
</div>
{% endblock %}
